{
    "manifest_version": 3,
    "name": "GuardianLens",
    "version": "10.6",
    "description": "AI-powered content safety filter with weekly parent reports",
    "permissions": [
        "activeTab",
        "storage",
        "scripting",
        "alarms",
        "tabs"
    ],
    "host_permissions": [
        "https://*.youtube.com/*",
        "https://*.linkedin.com/*",
        "https://*.instagram.com/*",
        "https://mail.google.com/*",
        "https://*.quora.com/*",
        "https://*.twitter.com/*",
        "https://*.x.com/*",
        "https://*.reddit.com/*",
        "https://*.facebook.com/*",
        "https://generativelanguage.googleapis.com/*",
        "https://*/*",
        "http://*/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*/*",
                "http://*/*"
            ],
            "js": [
                "content.js",
                "tracker.js"
            ],
            "run_at": "document_start",
            "all_frames": true
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon16.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        }
    },
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    }
}